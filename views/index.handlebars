<div class="container">

    <div class="jumbotron">
        <div class="center-text">
        <h1 class="text-center" id="title">Chubby Burger</h1>
        <p id="lead">"M’m, m’m, m’m, m’m,…Juiiiccyyy..."</p>
        </div>
        <br>

        <h3>Let's Make a Burger <i class="far fa-smile-wink"></i></h3>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger">Your choice:</label>
                    <input type="text" id="newBurger" name="burger" style="width:35%">
                    <button type="submit" class="btn btn-warning" id="addBurger"><i class="fas fa-seedling"></i></button>
                </div>
            </form>
        </panel>
<hr>

        <div class="row">
            <!-- Undevoured Burgers -->
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading" id="burger-head"><strong>New Burgers</strong></div>
                    <div class="panel-body">
                        <ul>
                            {{#each burgers}}
                            {{#unless devoured}}
                            <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                            <button type="button" class="eatBurger btn btn-success" data-id="{{this.id}}"
                                data-newDevoured="{{devour}}"><i class="fas fa-utensils"></i></button>
                            <hr>
                            {{/unless}}
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
            <!-- Devoured Burgers -->
            <div class="col-sm-6 right-side">
                <div class="panel panel-default">
                    <div class="panel-heading" id="burger-head"><strong>Devoured Burgers</strong></div>
                    <div class="panel-body">
                        <ul>
                            {{#each burgers}}
                            {{#if devoured}}
                            <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                            <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                                data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                            <hr>
                            {{/if}}
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div><!-- /row -->
    </div><!-- /jumbotron -->
    <div class="card-footer text-muted float-right">
        <a href="https://github.com/tamtr89/Eat-Da-Burger.git" class="footer-link">Visit me: <i class="fab fa-github-alt"></i>TamTran2018</a>
    </div>
</div><!-- /container -->